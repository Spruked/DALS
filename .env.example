# Environment variables for ISS Module deployment
# Copy this file to .env and customize for your environment

# Basic service configuration
ISS_SERVICE_NAME=iss-controller
ISS_VERSION=1.0.0
ENVIRONMENT=production

# Network configuration
ISS_HOST=0.0.0.0
ISS_PORT=8003

# Prometheus Prime integration
PROMETHEUS_INTEGRATION_ENABLED=true
API_GATEWAY_URL=http://localhost:8000

# Service discovery
SERVICE_REGISTRY_URL=http://consul:8500
CONSUL_HOST=consul
CONSUL_PORT=8500

# Database and storage
ISS_DATA_DIR=/app/data
ISS_LOG_STORAGE_PATH=/app/data/logs
ISS_VAULT_STORAGE_PATH=/app/data/vault
DATABASE_URL=sqlite:///app/data/iss.db

# Redis configuration
REDIS_URL=redis://redis:6379
REDIS_ENABLED=true

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/data/logs/iss-controller.log

# Security settings
SECRET_KEY=your-production-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30
REQUIRE_AUTH=false

# CORS settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "https://yourdomain.com"]

# Circuit breaker settings
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring and metrics
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# ISS specific settings
ISS_STARDATE_OFFSET=0.0
ISS_DEFAULT_LOG_CATEGORY=general
ISS_MAX_LOG_ENTRIES=10000
ISS_LOG_RETENTION_DAYS=90

# Captain's Log settings
ISS_CAPTAIN_NAME=Captain
ISS_SHIP_NAME=ISS Module
ISS_AUTO_BACKUP_ENABLED=true
ISS_BACKUP_INTERVAL_HOURS=24

# Export settings
ISS_EXPORT_DIR=/app/exports
ISS_MAX_EXPORT_SIZE_MB=100
ISS_EXPORT_FORMATS=["csv", "json", "markdown"]

# VisiData integration (optional)
ISS_VISIDATA_ENABLED=false
ISS_VISIDATA_PORT=8080

# Prometheus Prime specific
REASONING_TIMEOUT_MS=5000
VAULT_QUERY_LIMIT=1000

# External service URLs (configure as needed)
COCHLEAR_PROCESSOR_URL=http://cochlear-processor:8001
PHONATORY_OUTPUT_URL=http://phonatory-output:8002
VAULT_MANAGER_URL=http://vault-manager:8004